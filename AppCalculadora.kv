<Calculadora>:
    display: tela
    rows: 7
    padding: "5px"
    spacing: "5px"

    BoxLayout:
        TextInput:
            id: tela
            font_size: "24px"
            multiline: False

    BoxLayout:
        spacing: "5px"

        Button:
            text: "7"
            on_press: tela.text += self.text

        Button:
            text: "8"
            on_press: tela.text += self.text

        Button:
            text: "9"
            on_press: tela.text += self.text

        Button:
            text: "/"
            on_press: tela.text += self.text

    BoxLayout:
        spacing: "5px"

        Button:
            text: "4"
            on_press: tela.text += self.text

        Button:
            text: "5"
            on_press: tela.text += self.text

        Button:
            text: "6"
            on_press: tela.text += self.text

        Button:
            text: "*"
            on_press: tela.text += self.text

    BoxLayout:
        spacing: "5px"

        Button:
            text: "1"
            on_press: tela.text += self.text

        Button:
            text: "2"
            on_press: tela.text += self.text

        Button:
            text: "3"
            on_press: tela.text += self.text

        Button:
            text: "-"
            on_press: tela.text += self.text

    BoxLayout:
        spacing: "5px"

        Button:
            text: "AC"
            on_press: tela.text = ""

        Button:
            text: "0"
            on_press: tela.text += self.text

        Button:
            text: "."
            on_press: tela.text += self.text

        Button:
            text: "+"
            on_press: tela.text += self.text

    BoxLayout:
        spacing: "5px"

        Button:
            text: "="
            on_press: root.calcular(tela.text)